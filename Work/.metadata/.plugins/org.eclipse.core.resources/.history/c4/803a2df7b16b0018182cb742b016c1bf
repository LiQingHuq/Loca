<script type="text/javascript">
     function newfile{
    	 var oTabNode=document.getElementById("all");
    	 
    	 var oTrNode=oTabNode.insertRow;
    	 
    	  var oTdNode1=oTrNode.insertCell;
    	  var oTrNode2=oTrNode.insertCell;
    	   
    	  oTdNode1.innerhTML="<input type='file'/>";
    	  oTdNode2.innerhTML=""<a href='javascript:void(0)'/>删除附件</a>";
    	  
     }
</script>
