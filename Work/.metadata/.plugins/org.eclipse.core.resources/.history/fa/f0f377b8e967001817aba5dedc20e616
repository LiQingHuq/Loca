<script type="text/javascript">
function listView(index){
	var onode=document.getElementsByTagName("dl")[index];
	 
	if(onode.className="close")
		onode.className="open";
	else
		onode.className="close";
}

</script>

<dl calss="close">
  <dt onclick="listView()">显示条目一</dt>
  <dd>列表1</dd>
  <dd>列表1</dd>
  <dd>列表1</dd>
  <dd>列表1</dd>
  <dd>列表1</dd>
  
</dl>

